<section class="max-w-6xl mx-auto">
    <h2 class="text-3xl font-bold mb-6">Anime y Series favoritas üçø</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {{#each Items}}
        <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition">
            <img src="{{CaratulaUrl}}" alt="{{Titulo}}" class="w-full h-52 object-cover">
            <div class="p-5">
                <h3 class="font-bold text-xl mb-2">{{Titulo}}</h3>
                <p class="text-gray-600 text-sm mb-3">{{Descripcion}}</p>
                {{#if TrailerYoutubeId}}
                <iframe class="w-full h-48 rounded-lg"
                        src="https://www.youtube.com/embed/{{TrailerYoutubeId}}"
                        frameborder="0" allowfullscreen></iframe>
                {{/if}}
            </div>
        </div>
        {{/each}}
    </div>
</section>
