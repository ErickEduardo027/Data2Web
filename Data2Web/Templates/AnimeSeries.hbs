{{#> _Layout title="Anime y Series" active="animeseries"}}

<h1 class="text-2xl font-bold mb-6">Anime y Series Favoritas</h1>

<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {{#each Items}}
    <div class="bg-white p-4 rounded-lg shadow">
        <h2 class="font-semibold text-lg">{{Titulo}}</h2>
        <p class="text-gray-600">{{Descripcion}}</p>
        {{#if CaratulaUrl}}
        <img src="{{CaratulaUrl}}" alt="{{Titulo}}" class="rounded-lg mt-2 h-48 object-cover">
        {{/if}}
        {{#if TrailerYoutubeId}}
        <iframe class="mt-4 w-full h-64" src="https://www.youtube.com/embed/{{TrailerYoutubeId}}" frameborder="0" allowfullscreen></iframe>
        {{/if}}
    </div>
    {{/each}}
</div>

{{/_Layout}}

