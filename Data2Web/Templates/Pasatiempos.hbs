{{#> _Layout title="Pasatiempos" active="pasatiempos"}}

<h1 class="text-2xl font-bold mb-6">Mis Pasatiempos</h1>

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 gallery">
    {{#each Items}}
    <div class="bg-white p-4 rounded-lg shadow">
        <h2 class="text-lg font-semibold">{{Titulo}}</h2>
        <p class="text-gray-600">{{Descripcion}}</p>
        {{#if ImagenUrl}}
        <img src="{{ImagenUrl}}" alt="{{Titulo}}">
        {{/if}}
    </div>
    {{/each}}
</div>

{{/_Layout}}

