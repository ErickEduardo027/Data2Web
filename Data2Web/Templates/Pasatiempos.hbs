{{#> _Layout title="Pasatiempos" active="pasatiempos"}}
<h1 class="text-2xl font-bold mb-4">Mis Pasatiempos</h1>
<div class="grid grid-cols-2 md:grid-cols-3 gap-4">
    {{#each Items}}
    <div class="bg-gray-100 p-4 rounded shadow">
        <h3 class="font-semibold">{{Nombre}}</h3>
        <p>{{Descripcion}}</p>
        <img src="{{ImagenUrl}}" alt="{{Nombre}}" class="mt-2 rounded">
    </div>
    {{/each}}
</div>
{{/_Layout}}
