{{#> _Layout title="Sobre mí" active="sobre-mi"}}
<h1 class="text-2xl font-bold mb-4">Sobre mí</h1>
<p class="text-gray-600">
    Hola, mi nombre es {{Datos.Nombres}} {{Datos.Apellidos}}, nacido el
    {{Datos.FechaNacimiento}}.
</p>

<h2 class="text-xl font-semibold mt-6 mb-2">👨‍👩‍👦 Genealogía</h2>
<ul class="list-disc pl-6">
    {{#each Genealogia}}
    <li>{{Parentesco}}: {{Nombre}} <img src="{{FotoUrl}}" alt="{{Nombre}}" class="inline w-10 h-10 rounded-full ml-2"></li>
    {{/each}}
</ul>

<h2 class="text-xl font-semibold mt-6 mb-2">📅 Línea de Tiempo</h2>
<ul class="timeline">
    {{#each Timeline}}
    <li class="timeline-item">{{Fecha}} - <strong>{{Titulo}}</strong>: {{Descripcion}}</li>
    {{/each}}
</ul>
{{/_Layout}}
