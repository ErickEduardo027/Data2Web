<section class="max-w-4xl mx-auto">
    <div class="bg-white shadow-lg rounded-2xl p-8 mb-10">
        <h2 class="text-3xl font-bold mb-4">Sobre mí</h2>
        <p class="text-gray-700 mb-6">
            Hola, soy <span class="font-semibold">{{Datos.Nombres}} {{Datos.Apellidos}}</span>.
            Nací el <span class="font-medium">{{Datos.FechaNacimiento}}</span>.
        </p>

        <h3 class="text-2xl font-semibold mb-4">👨‍👩‍👧‍👦 Mi familia</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {{#each Genealogia}}
            <div class="flex items-center space-x-4 bg-gray-50 p-4 rounded-lg shadow">
                <img src="{{FotoUrl}}" alt="{{Nombre}}" class="w-16 h-16 rounded-full object-cover">
                <div>
                    <p class="font-semibold text-lg">{{Nombre}}</p>
                    <p class="text-sm text-gray-600">{{Parentesco}}</p>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
