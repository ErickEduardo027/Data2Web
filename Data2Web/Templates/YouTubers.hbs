{{#> _Layout title="YouTubers" active="youtubers"}}

<h1 class="text-2xl font-bold mb-6">Mis YouTubers Favoritos</h1>

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
    {{#each Items}}
    <div class="bg-white p-4 rounded-lg shadow text-center">
        <h2 class="font-semibold text-lg">{{Nombre}}</h2>
        <p class="text-gray-600">{{Descripcion}}</p>
        {{#if LogoUrl}}
        <img src="{{LogoUrl}}" alt="{{Nombre}}" class="mx-auto h-24 object-contain mt-2">
        {{/if}}
        <a href="{{UrlCanal}}" target="_blank" class="block text-blue-600 hover:underline mt-2">Visitar canal</a>
    </div>
    {{/each}}
</div>

{{/_Layout}}

